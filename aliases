# BSD ls file listing
# G for color
# F for non-file identification
# A for hidden files & dirs
# l for expanded listing
# H for following symlinks
alias ls='ls -GF'
alias la='ls -GAF'
alias ll='ls -GFlh'
alias lla='ls -GFalh'

# less & grep with ANSI colors
alias less='less --RAW-CONTROL-CHARS'
alias grep='grep --color=auto'

# folder jumpin
alias ..='cd ..'         # Go up one directory
alias ...='cd ../..'     # Go up two directories
alias ....='cd ../../..' # Go up three directories
alias -- -='cd -'        # Go back

# file editing
alias edit="$EDITOR"
alias em='open -a emacs'

alias realpath='greadlink -f'

# alias "http" to SimpleHTTPServer
alias http='python -m SimpleHTTPServer'

# alias markdown to marked (node markdown parser)
alias markdown='marked --smart-lists'

# alias t to todo.txt CLI
alias t='todo'
